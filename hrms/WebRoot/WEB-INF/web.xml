	<!-- 配置编码过滤器 -->
	<filter>
		<!-- 过滤器名称 -->
		<filter-name>encoding</filter-name>
		<!-- 过滤器类 -->
		<filter-class>com.hrms.commons.filter.EncodingFilter</filter-class>
		<!-- 配置初始化参数 -->
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<!-- 过滤器映射配置 -->
	<filter-mapping>
		<filter-name>encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	

